---
import gallery from "../data/gallery.json";
import "glightbox/dist/css/glightbox.min.css";
---

<section id="galeria" class="relative py-12 px-4 bg-background font-body overflow-hidden">
    <div class="max-w-6xl mx-auto">
        <!-- Fondo decorativo izquierdo -->
        <img
            src="/branch-horizontal.webp"
            alt="ramas de espinillo"
            class="block absolute -left-3 top-1/2 -translate-y-1/2 w-96 opacity-80 pointer-events-none select-none"
        />
        <img
            src="/branch-left.webp"
            alt="ramas de espinillo"
            class="block absolute -left-10 top-1/3 -translate-y-1/2 w-96 opacity-80 pointer-events-none select-none"
        />
    
        <!-- Fondo decorativo derecho -->
        <img
            src="/branch-right.webp"
            alt="ramas de espinillo"
            class="block absolute right-0 md:top-1/2 top-3/4 -translate-y-1/2 w-96 opacity-80 pointer-events-none select-none"
        />
        <img
            src="/branch-vertical.webp"
            alt="ramas de espinillo"
            class="block absolute right-0 top-2/3 -translate-y-1/2 w-94 opacity-80 pointer-events-none select-none"
        />
        <img
            src="/branch-horizontal.webp"
            alt="ramas de espinillo"
            class="block absolute -right-4 bottom-0 -translate-y-1/2 w-94 opacity-80 rotate-180 pointer-events-none select-none"
        />
        <h2
            class="text-2xl md:text-3xl font-semibold text-center text-primary mb-8"
        >
            Galería de imágenes
        </h2>
        <div
            class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 glightbox-gallery relative z-10"
        >
            {
                gallery.map(({ src, alt, caption }) => (
                    <a
                        href={src}
                        class="glightbox bg-background"
                        data-gallery="gallery"
                        data-title={`<p class="text-primary text-center font-body font-semibold bg-background">${caption || alt}</p>`}
                    >
                        <img
                            src={src}
                            alt={alt}
                            class="w-full h-64 object-cover rounded-lg shadow hover:scale-105 transition-transform duration-300"
                            loading="lazy"
                        />
                    </a>
                ))
            }
        </div>
    </div>
</section>
